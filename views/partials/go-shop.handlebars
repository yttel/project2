{{!-- The shopping list --}}

<div class="container mt-5" id="goshoplist">
    <div class="row d-flex justify-content-center">
        <h1 class="listtitle my-3">Go Shopping!</h1>
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-6 col-md-12">
            <div class="cow mb-4">
                <h3><i class="fas fa-cheese"></i>   Dairy</h3>
                <ul id="theDairy">

                    {{#each listItem}}
                        {{#ifEquals this.Item.CategoryId 1 }}
                        {{#unless obtained}}
                        {{#unless nextTime}}
                            <li>
	                            {{Item.name}}
                                <button class="delete-listitem border-0 rounded-circle ml-3" data-id="{{this.listItem}}"><i class="fas fa-cart-arrow-down"></i></button>
                                <button class="next-time border-0 rounded-circle ml-2" data-id="{{this.listItem}}"><i class="fas fa-share-square"></i></button>
                            </li>
                        {{/unless}}
                        {{/unless}}
                        {{/ifEquals}}
                    {{/each}}
                
                </ul>
            </div>
            <div class="veggies mb-4">
                <h3><i class="fas fa-carrot"></i>   Produce</h3>
                <ul id="TheProduce">

                    {{#each listItem}}
                        {{#ifEquals this.Item.CategoryId 2 }}
                        {{#unless obtained}}
                        {{#unless nextTime}}
